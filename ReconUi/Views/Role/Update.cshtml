@model Db.IdentityLibrary.DataModel.AspNetRoles
@{
    ViewBag.Title = "User";
    ViewBag.MenuTitle = "User";
}
<div class="card">
    <div class="content">
        <div class="row">
            <div style="padding: 33px;">
                <div class="col-xs-12">
                    <h2>Update Role </h2>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="col-xs-12">
                        <div>
                            <p> Enter User Role Name:</p>
                            @Html.HiddenFor(x => x.Id)
                            @Html.EditorFor(m => m.Name, new {@class = "form-control"})
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-xs-12" style="margin:11px 0px 0px 9px;">
                        <input type="submit" value="Update Role" class="btn btn-success"/>
                    </div>
                }

                <div class="col-xs-12" style="margin:11px 0px 0px 0px;">
                    @Html.ActionLink("Back to list", "Index", "User")
                </div>
            </div>
        </div>
    </div>
</div>
