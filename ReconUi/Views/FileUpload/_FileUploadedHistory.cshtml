$(document).ready(function () {
    var table = $('#assets-data-table').DataTable({
        "lengthChange": true,
        "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });

    $(document).on('keyup', '#search-FileNameId', function () {
        debugger;
        table
            .column(0)
            .search(this.value)
            .draw();
    });
    $(document).on('keyup', '#search-TerminalId', function () {
        debugger;
        table
            .column(2)
            .search(this.value)
            .draw();
    });
    $("#btnViewFileupload").click(function () {
        $("#ViewTransactionsPartial").html("");
    });
});
</script>
