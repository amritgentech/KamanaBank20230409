<script>
    $(document).ready(function () {
        $('#drpReconType2').select2();
        $('.drpReconType2').select2();
        $("#sideBarShow").hide();
        $(".nav-control-link").click(function () {
            $(this).parent().parent().find("li").each(function () {
                $(this).removeClass("active");
            });
            //            $("#" + $(".navbar-brand").attr("id")).closest("li").addClass("active");
        });
        $("#" + $(".navbar-brand").text().split(' ')[0] + "Nav").closest("li").addClass("active");

        $("#sideBarCollapse").click(function () {
            $(this).hide();
            $(".sidebar").addClass("left-hide");
            $("#panelshow").parent().find(".main-panel").addClass("main-panel-full");
            $("#panelshow").css("background-color", "#f4f3ef");
            $("#sideBarShow").show("slow");
        });
        $("#sideBarShow").click(function () {
            $(this).hide();
            $(".sidebar").removeClass("left-hide");
            $("#panelshow").parent().find("#panelshow").removeClass("main-panel-full");
            $("#sideBarCollapse").show("slow");
        });
        $('#loading').hide();
        $(document).ajaxStart(function () {
            $('#loading').show();
        }).ajaxStop(function () {
            $('#loading').hide();
        });

        $(document).submit(function () {
            $('#loading').show();
        });
    })
</script>