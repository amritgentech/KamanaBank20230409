@model IEnumerable<Db.Model.Terminal>

@{
    ViewBag.Title = "Terminal";
    ViewBag.MenuTitle = "Terminal";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div>
    @using (Html.BeginForm("Index", "Terminal", FormMethod.Post, new { id = "Config" }))
    {
        <label>Find Terminal by Terminal Id</label>
        <input type="text" id="terminalId" name="terminalId" />
        <button type="submit">Find</button>
    }
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="col-md-6">
</div>
<div class="col-md-6">
    <button style="display: inline-block; float: right; margin-bottom: 23px;" id="btnExport">
        <img src="/Content/images/ExportButton.gif" style="float: right; margin-right: 0.5em; height: 20px;">Export Excel
    </button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Branch.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerminalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerminalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerminalBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerminalIP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerminalUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerminalPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cbs_terminal_ac)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalIP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminalPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cbs_terminal_ac)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $(document).on('click', '#btnExport', function () {
            window.location.href = "/Report/ExportTerminalRecord";
        });
    })
</script>